  <!-- Trust Signals Section -->
  <section class="bg-white py-20">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Why Choose One Stop Cleaning</h2>
        <p class="text-xl text-gray-600">The numbers that speak to our commitment to excellence</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Trust Signal 1 -->
        <div class="bg-gray-50 p-6 rounded-xl text-center">
          <i class="ri-time-line text-5xl text-[#57b5e7] mb-4 block"></i>
          <div class="text-3xl font-bold text-gray-900 mb-2">10+ Years</div>
          <div class="text-gray-600 text-sm">Serving the community since 2015</div>
        </div>

        <!-- Trust Signal 2 -->
        <div class="bg-gray-50 p-6 rounded-xl text-center">
          <i class="ri-user-smile-line text-5xl text-[#57b5e7] mb-4 block"></i>
          <div class="text-3xl font-bold text-gray-900 mb-2">1000+</div>
          <div class="text-gray-600 text-sm">Satisfied residential and commercial clients</div>
        </div>

        <!-- Trust Signal 3 -->
        <div class="bg-gray-50 p-6 rounded-xl text-center">
          <i class="ri-star-fill text-5xl text-[#57b5e7] mb-4 block"></i>
          <div class="text-3xl font-bold text-gray-900 mb-2">99%</div>
          <div class="text-gray-600 text-sm">Customer satisfaction rating</div>
        </div>

        <!-- Trust Signal 4 -->
        <div class="bg-gray-50 p-6 rounded-xl text-center">
          <i class="ri-shield-check-line text-5xl text-[#57b5e7] mb-4 block"></i>
          <div class="text-3xl font-bold text-gray-900 mb-2">Fully</div>
          <div class="text-gray-600 text-sm">Licensed, bonded, and insured</div>
        </div>

        <!-- Trust Signal 5 -->
        <div class="bg-gray-50 p-6 rounded-xl text-center">
          <i class="ri-leaf-line text-5xl text-[#10B981] mb-4 block"></i>
          <div class="text-3xl font-bold text-gray-900 mb-2">100%</div>
          <div class="text-gray-600 text-sm">Green cleaning products</div>
        </div>

        <!-- Trust Signal 6 -->
        <div class="bg-gray-50 p-6 rounded-xl text-center">
          <i class="ri-customer-service-line text-5xl text-[#10B981] mb-4 block"></i>
          <div class="text-3xl font-bold text-gray-900 mb-2">24/7</div>
          <div class="text-gray-600 text-sm">Customer support availability</div>
        </div>

        <!-- Trust Signal 7 -->
        <div class="bg-gray-50 p-6 rounded-xl text-center">
          <i class="ri-checkbox-circle-line text-5xl text-[#10B981] mb-4 block"></i>
          <div class="text-3xl font-bold text-gray-900 mb-2">100%</div>
          <div class="text-gray-600 text-sm">Satisfaction guarantee</div>
        </div>

        <!-- Trust Signal 8 -->
        <div class="bg-gray-50 p-6 rounded-xl text-center">
